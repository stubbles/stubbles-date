{
    "name": "stubbles/date",
    "type": "library",
    "homepage": "http://stubbles.net/",
    "license": "BSD-3-Clause",
    "description": "Simplified handling of dates and datespans.",
    "require": {
        "php": "^8.0",
        "ext-ctype": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "stubbles/reflect": "^10.0",
        "bovigo/assert": "^7.0.1",
        "phpstan/phpstan": "^1.9"
    },
    "suggest": {
        "bovigo/assert": "To use predicates when asserting dates with stubbles\\date\\assert\\equalsDate()"
    },
    "autoload": {
        "psr-4": {
            "stubbles\\date\\": "src/main/php"
        },
        "files": ["src/main/php/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
          "stubbles\\date\\": "src/test/php"
        },
        "files": ["src/test/php/span/functions.php"]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "9.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "php-coveralls": "php-coveralls",
        "phpstan": "phpstan"
    }
}
